package sidenav

type SideNavSectionProps struct {
	Title string
	Grow  bool
}

templ SideNavSection(props SideNavSectionProps) {
	<div class={ "flex flex-col space-y-1 px-4", templ.KV("grow", props.Grow) } hx-boost="true">
		<h6 class="text-xs font-semibold text-slate-500">{ props.Title }</h6>
		<nav class="flex flex-col space-y-1">
			{ children... }
		</nav>
	</div>
}
